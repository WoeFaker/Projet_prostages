{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Stage n°{{ formation.id}} ✅</h1>
        <h2>{{ "Cette page affichera le descriptif de la formation" ~ formation.id }}, ainsi que ses stages.</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{formation.nomLong}}</h4>
                <p class="card-text">{{formation.nomcourt}}</p>
                {% for stage in formation.stages %}
                    <p class="card-text"><a href="{{path('prostages_stages',{id:stage.id})}}">{{stage.titre}}</a></p>
                {% endfor %}
            </div>
         </div>
    </div>
{% endblock %}
