{% extends 'base.html.twig' %}

{% block title %}Stages{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Stage n°{{ stage.id}} ✅</h1>
        <h2>{{ "Cette page affichera le descriptif du stage ayant l'identifiant n°" ~ stage.id }}</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{stage.titre}}</a></h4>
                <p class="card-text">{{stage.descMissions}}</p>
                <p class="card-text">{{stage.emailContact}}</p>
                <p class="card-text">{{stage.entreprise.nom}}</p>
            </div>
        </div>
    </div>
{% endblock %}
