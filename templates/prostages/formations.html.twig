{% extends 'base.html.twig' %}



{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Formations</h1>
        <h2>Cette page affichera la liste des formations requises pour les differents stages propos√©s.</h2>
        <div class="card-deck">
            {% for formationCourant in formations %}
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><a href="{{path('prostages_formation',{id:formationCourant.id})}}">{{formationCourant.nomLong}}</a></h4>
                        <p class="card-text">{{formationCourant.nomCourt}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
