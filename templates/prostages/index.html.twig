{% extends 'base.html.twig' %}

{% block title %}Hello ProstagesController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Bienvenue sur la page d'accueil de Prostages</h1>
        Ici vous pourrez trouver un stage ! Recherchez sans plus tarder !
    </div>
    <div class="card-deck">
        {% for stageCourant in stages %}
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><a href="{{path('prostages_stages',{id:stageCourant.id})}}">{{stageCourant.titre}}</a></h4>
                    <p class="card-text">{{stageCourant.descMissions}}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
