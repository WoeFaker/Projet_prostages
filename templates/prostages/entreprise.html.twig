{% extends 'base.html.twig' %}

{% block title %}Stages{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Stage n°{{ controller_name }} ✅</h1>
        <h2>{{ "Cette page affichera le descriptif de l'entreprise" ~ entreprise.id }}</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{entreprise.nom}}</h4>
                <p class="card-text">{{entreprise.activite}}</p>
                <p class="card-text">{{entreprise.adresse}}</p>
                <p class="card-text">{{entreprise.URLsite}}</p>
                {% for stage in entreprise.stages %}
                    <p class="card-text"><a href="{{path('prostages_stages',{id:stage.id})}}">{{stage.titre}}</a></p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
